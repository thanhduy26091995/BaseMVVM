<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.FontPathRegular" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/IBMPlexSans-Regular.ttf</item>
    </style>

    <style name="TextAppearance.FontPathSemiBold" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/IBMPlexSans-SemiBold.ttf</item>
    </style>

    <style name="TextAppearance.FontPathBold" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/IBMPlexSans-Bold.ttf</item>
    </style>

    <style name="TextAppearance.FontPathMedium" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/IBMPlexSans-Medium.ttf</item>
    </style>

</resources>
